sudo apt-get install smbclient

mount -t cifs -o username=<Пользователь>,password= //<IP-адрес>/<Общий каталог> <Точка монтирования>
mount -t cifs -o username=Admin,password=P@ssw0rd //192.168.10.3/Admin_Files /mnt/Admin_Files

Automount fstab

apt install cifs-utils

nano /root/.smbclient
username=dmosk
password=dPassw0rd
domain=dmosk.local

chmod 600 /root/.smbclient
chown root:root /root/.smbclient

nano /etc/fstab
//192.168.10.3/Admin_Files /mnt/Admin_Files cifs user,rw,credentials=/root/.smbclient 0 0
mount -a
